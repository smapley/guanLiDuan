<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/title"
        layout="@layout/title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@+id/title"
        android:background="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/print_keybord"
        android:layout_below="@+id/title">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="名字"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/dayinji_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="备注"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/dayinji_beizhu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingLeft="10dp"

                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="信用"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/dayinji_xinyong"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <LinearLayout
                    style="@style/hezhuang_text"
                    android:padding="5dp">


                </LinearLayout>


                <TextView
                    style="@style/hezhuang_text"
                    android:text="赔率" />

                <TextView
                    style="@style/hezhuang_text"
                    android:text="返水" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    style="@style/hezhuang_text"
                    android:text="二字定" />

                <TextView
                    android:id="@+id/yiya1"
                    style="@style/hezhuang_text" />

                <RelativeLayout
                    android:id="@+id/jin1_layout"
                    style="@style/hezhuang_text"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/jin1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:lines="1"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/jin1_ico"
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/jin1_text"
                        android:background="@color/blue"
                        android:lines="1"
                        android:visibility="gone" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    style="@style/hezhuang_text"
                    android:text="三字定" />

                <TextView
                    android:id="@+id/yiya2"
                    style="@style/hezhuang_text" />

                <RelativeLayout
                    android:id="@+id/jin2_layout"
                    style="@style/hezhuang_text"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/jin2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:lines="1"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/jin2_ico"
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/jin2_text"
                        android:background="@color/blue"
                        android:lines="1"
                        android:visibility="gone" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    style="@style/hezhuang_text"
                    android:text="四字定" />

                <TextView
                    android:id="@+id/yiya3"
                    style="@style/hezhuang_text" />

                <RelativeLayout
                    android:id="@+id/jin3_layout"
                    style="@style/hezhuang_text"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/jin3_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:lines="1"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/jin3_ico"
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/jin3_text"
                        android:background="@color/blue"
                        android:lines="1"
                        android:visibility="gone" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    style="@style/hezhuang_text"
                    android:text="二字现" />

                <TextView
                    android:id="@+id/yiya4"
                    style="@style/hezhuang_text" />

                <RelativeLayout
                    android:id="@+id/jin4_layout"
                    style="@style/hezhuang_text"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/jin4_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:lines="1"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/jin4_ico"
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/jin4_text"
                        android:background="@color/blue"
                        android:lines="1"
                        android:visibility="gone" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    style="@style/hezhuang_text"
                    android:text="三字现" />

                <TextView
                    android:id="@+id/yiya5"
                    style="@style/hezhuang_text" />

                <RelativeLayout
                    android:id="@+id/jin5_layout"
                    style="@style/hezhuang_text"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/jin5_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:lines="1"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/jin5_ico"
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/jin5_text"
                        android:background="@color/blue"
                        android:lines="1"
                        android:visibility="gone" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    style="@style/hezhuang_text"
                    android:text="四字现" />

                <TextView
                    android:id="@+id/yiya6"
                    style="@style/hezhuang_text" />

                <RelativeLayout
                    android:id="@+id/jin6_layout"
                    style="@style/hezhuang_text"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/jin6_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:lines="1"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/jin6_ico"
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/jin6_text"
                        android:background="@color/blue"
                        android:lines="1"
                        android:visibility="gone" />
                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="70dp" />
        </LinearLayout>

    </ScrollView>

    <include
        layout="@layout/keybords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        />
</RelativeLayout>